{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "required": true
    },
    "buttonText": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "imagePosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "default": "left",
      "required": true
    },
    "hasGrayBackground": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
